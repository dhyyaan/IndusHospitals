<resources>

    <declare-styleable name="OtpView">
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="text_background_color" format="color" />
        <attr name="otp" format="string"/>
    </declare-styleable>

        <declare-styleable name="MaterialSpinner">
            <attr name="ms_baseColor" format="integer"/>
            <attr name="ms_highlightColor" format="integer"/>
            <attr name="ms_errorColor" format="integer"/>
            <attr name="ms_error" format="string"/>
            <attr name="ms_hint" format="string"/>
            <attr name="ms_hintColor" format="color"/>
            <attr name="ms_floatingLabelText" format="string"/>
            <attr name="ms_floatingLabelColor" format="color"/>
            <attr name="ms_multiline" format="boolean"/>
            <attr name="ms_nbErrorLines" format="integer"/>
            <attr name="ms_typeface" format="string"/>
            <attr name="ms_alignLabels" format="boolean"/>
            <attr name="ms_thickness" format="dimension"/>
            <attr name="ms_thickness_error" format="dimension"/>
            <attr name="ms_arrowSize" format="dimension"/>
            <attr name="ms_arrowColor" format="color"/>
            <attr name="ms_enableFloatingLabel" format="boolean"/>
            <attr name="ms_enableErrorLabel" format="boolean"/>
            <attr name="ms_isRtl" format="boolean"/>

        </declare-styleable>

<!--badge view-->
    <declare-styleable name="MaterialBadgeTextView">
        <attr name="mbtv_backgroundColor" format="color" />
        <attr name="mbtv_border_width" format="dimension" />
        <attr name="mbtv_border_color" format="color" />
        <attr name="mbtv_border_alpha" format="float" />
        <attr name="mbtv_type" format="enum">
            <enum name="shadow_gradual" value="1" />
            <enum name="shadow_alpha" value="2" />
        </attr>
    </declare-styleable>

    <!-- week view calender-->
    <declare-styleable name="WeekDatePicker">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:ellipsize" />
        <attr name="wdp_dividerSize" format="dimension" />
        <attr name="wdp_labelTextSize" format="dimension" />
        <attr name="wdp_labelTextColor" format="color" />
        <attr name="wdp_labelPadding" format="dimension"/>
        <attr name="wdp_labelNames" format="reference" />
        <attr name="wdp_dayBackground" format="reference" />
        <attr name="wdp_indicatorDrawable" format="reference" />


        <attr  name="wdp_dayNameLength" format="enum" >
            <enum name="singleLetter" value="1" />
            <enum name="doubleLetter" value="2" />

        </attr>

        <attr name="wdp_firstDayOfWeekUsingCurrrentdate" format="boolean" />

        <attr name="wdp_firstDayOfWeek" format="enum">
            <enum name="saturday" value="6" />
            <enum name="sunday" value="7" />
            <enum name="monday" value="1" />
        </attr>
    </declare-styleable>

    <attr name="weekDatePickerStyle" format="reference" />

</resources>