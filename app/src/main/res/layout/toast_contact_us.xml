<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/twenty_dp"
        android:background="@drawable/circular_textview_req_app"
        android:orientation="vertical">
        <com.indushospitals.utils.font.CenturyGothicBold
            android:id="@+id/tv_req_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/twenty_sp"
            android:text="@string/text_contactus"
            android:textColor="@android:color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/five_dp"
            android:visibility="visible" />
        <com.indushospitals.utils.font.CenturyGothicRegular
            android:id="@+id/tv_req_appointment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/fifteen_sp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="@string/text_contact_confermation"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>